generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id            Int            @id @default(autoincrement())
  name          String
  createdAt     DateTime       @default(now())
  users         User[]
  products      Product[]
  orders        Order[]
  inventory     Inventory[]
  inventoryLogs InventoryLog[]
  categories    Category[]
}

model User {
  id                 Int               @id @default(autoincrement())
  fullName           String            @db.VarChar(150)
  email              String            @unique @db.VarChar(255)
  passwordHash       String?           @db.VarChar(100)
  role               UserRole          @default(USER)
  tenantId           Int
  tenant             Tenant            @relation(fields: [tenantId], references: [id])
  verified           DateTime?
  provider           String?
  providerId         String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  cart               Cart?
  orders             Order[]
  verificationCode   VerificationCode?
  mustChangePassword Boolean           @default(false)
  sessions           Session[]
  activityLogs       ActivityLog[]
  banned             Boolean           @default(false)

  @@index([email])
}

model Session {
  id           String   @id @default(uuid())
  userId       Int
  refreshToken String   @unique
  userAgent    String?
  ip           String?
  deviceId     String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActivityLog {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  action    String
  ip        String?
  userAgent String?

  requestId String?
  method    String?
  url       String?
  latencyMs Float?
  meta      String?

  createdAt DateTime @default(now())
}

model Category {
  id        Int      @id @default(autoincrement())
  tenantId  Int
  name      String
  slug      String   @unique
  parentId  Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")
  products Product[]
  tenant   Tenant     @relation(fields: [tenantId], references: [id])
}

model Product {
  id         Int           @id @default(autoincrement())
  tenantId   Int
  name       String
  slug       String        @unique
  shortDesc  String?
  fullDesc   String?
  status     ProductStatus @default(ACTIVE)
  categoryId Int
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  tenant      Tenant         @relation(fields: [tenantId], references: [id])
  category    Category       @relation(fields: [categoryId], references: [id])
  items       ProductItem[]
  images      ProductImage[]
  ingredients Ingredient[]   @relation("IngredientToProduct")

  @@index([categoryId])
}

model ProductItem {
  id        Int      @id @default(autoincrement())
  productId Int
  sku       String   @unique
  price     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  productColor     Int?
  productLength    Int?
  productMaterials ProductMaterial?
  productShape     Int?
  productSizes     Int?
  productThickness Int?
  pvcSize          Int?
  steelSize        Int?
  cartItem         CartItem[]       @relation("ProductItemToCartItem")

  product   Product    @relation(fields: [productId], references: [id])
  inventory Inventory?

  @@index([productId])
}

model ProductImage {
  id        Int    @id @default(autoincrement())
  productId Int
  url       String
  sortOrder Int    @default(0)

  product Product @relation(fields: [productId], references: [id])
}

model Inventory {
  id            Int            @id @default(autoincrement())
  productItemId Int            @unique
  quantity      Int            @default(0)
  tenantId      Int
  tenant        Tenant         @relation(fields: [tenantId], references: [id])
  productItem   ProductItem    @relation(fields: [productItemId], references: [id])
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  logs          InventoryLog[]

  @@index([tenantId])
  @@index([productItemId])
}

model InventoryLog {
  id            Int      @id @default(autoincrement())
  inventoryId   Int
  productItemId Int
  tenantId      Int
  userId        Int?
  change        Int
  oldQuantity   Int
  newQuantity   Int
  reason        String?
  requestId     String?
  createdAt     DateTime @default(now())

  inventory Inventory @relation(fields: [inventoryId], references: [id])
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
}

model Ingredient {
  id        Int              @id @default(autoincrement())
  name      String
  price     Int
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  images    IngredientImage[]
  cartItem  CartItem[]       @relation("CartItemToIngredient")
  products  Product[]        @relation("IngredientToProduct")
}

model IngredientImage {
  id           Int        @id @default(autoincrement())
  ingredientId Int
  url          String
  sortOrder    Int        @default(0)

  ingredient Ingredient @relation(fields: [ingredientId], references: [id])
}

model Cart {
  id          Int        @id @default(autoincrement())
  userId      Int?       @unique
  token       String     @unique
  totalAmount Int        @default(0)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User?      @relation(fields: [userId], references: [id])
  items       CartItem[]

  @@index([userId])
}

model CartItem {
  id            Int          @id @default(autoincrement())
  cartId        Int
  productItemId Int
  quantity      Int          @default(1)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  cart          Cart         @relation(fields: [cartId], references: [id])
  productItem   ProductItem  @relation("ProductItemToCartItem", fields: [productItemId], references: [id])
  ingredients   Ingredient[] @relation("CartItemToIngredient")

  @@index([cartId])
  @@index([productItemId])
}

model Order {
  id          Int         @id @default(autoincrement())
  userId      Int?
  tenantId    Int
  tenant      Tenant      @relation(fields: [tenantId], references: [id])
  token       String
  totalAmount Int
  status      OrderStatus @default(PENDING)
  paymentId   String?
  items       Json
  fullName    String      @db.VarChar(150)
  email       String      @db.VarChar(255)
  phone       String      @db.VarChar(20)
  address     String      @db.VarChar(255)
  comment     String?     @db.VarChar(1000)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  user        User?       @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([email])
  @@index([phone])
  @@index([tenantId])
}

model VerificationCode {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  code      String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime

  @@unique([userId, code])
}

model Story {
  id              Int         @id @default(autoincrement())
  previewImageUrl String
  createdAt       DateTime    @default(now())
  items           StoryItem[]
}

model StoryItem {
  id        Int      @id @default(autoincrement())
  storyId   Int
  sourceUrl String
  createdAt DateTime @default(now())
  story     Story    @relation(fields: [storyId], references: [id])
}

enum OrderStatus {
  PENDING
  SUCCEEDED
  CANCELLED
}

enum UserRole {
  USER
  MANAGER
  ADMIN
}

enum ProductMaterial {
  STEEL
  PVC
  ALUMINIUM
  PLASTIC
  RUBBER
}

enum ProductStatus {
  ACTIVE
  ARCHIVED
  DRAFT
}
